<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gredient"
    android:orientation="vertical"
    android:weightSum="4"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:layout_gravity="center">


    <Button
        android:id="@+id/signInButton"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_rounded"
        android:drawableLeft="@drawable/googleg_standard_color_18"
        android:paddingLeft="20dp"
        android:text="Login With Google"
        android:textColor="#ffff"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/phone_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/phone_id"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="187dp"
        android:background="@drawable/button_rounded_orange"
        android:drawableLeft="@drawable/ic_action_phone"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:paddingLeft="20dip"
        android:text="Login With Phone Number"
        android:textColor="#ffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/id_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="70dp"
        android:layout_marginTop="74dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Welcome to DAILY CASHY"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#ffff"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="71dp"
        android:src="@drawable/cash_new_icon"
        app:layout_constraintBottom_toTopOf="@+id/signInButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_welcome" />


</android.support.constraint.ConstraintLayout>